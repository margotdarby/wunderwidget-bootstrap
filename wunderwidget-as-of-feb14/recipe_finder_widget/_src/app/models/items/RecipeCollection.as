package app.models.items
{



public class RecipeCollection  
{
	
//-------------------------------------------------------------
// PRIVATE VARIABLES
//-------------------------------------------------------------

	private var _recipes:Array;
	
//-------------------------------------------------------------
// CONSTRUCTOR
//-------------------------------------------------------------	
	
	public function RecipeCollection(recipes:Array)
	{
		_recipes = recipes;
	}

//-------------------------------------------------------------
// PRIVATE METHODS	
//-------------------------------------------------------------

	

//-------------------------------------------------------------
// EVENT HANDLERS
//-------------------------------------------------------------


	
//-------------------------------------------------------------
// GETTER / SETTERS
//-------------------------------------------------------------	



//-------------------------------------------------------------
// PUBLIC METHODS
//-------------------------------------------------------------

	public function search(searchSpec:RecipeSpec):Array
	{
		var matchingRecipes:Array = new Array();
		
		for (var i:uint = 0; i < _recipes.length; i++)
		{
			if (_recipes[i].getSpec().matches(searchSpec))
			{
				matchingRecipes.push(_recipes[i]);
			}
		}
		
		return matchingRecipes;
	}
	
//-------------------------------------------------------------
// END OF CLASS	
//-------------------------------------------------------------
}
}

