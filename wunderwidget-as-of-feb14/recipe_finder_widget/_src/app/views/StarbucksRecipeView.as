package app.views {		import flash.display.Sprite;	import flash.events.MouseEvent;	import gs.TweenLite;	import gs.easing.*;	import app.models.RecipeModel;	import app.events.ModelEvent;	import app.views.ui.StarbucksRecipeContainer;	import app.views.ui.ShareButton;/***	@langversion ActionScript 3.0*	@playerversion Flash 9.0**	@author Matt Ceccarelli*	@since  17.05.2010*/public class StarbucksRecipeView extends Sprite {//-------------------------------------------------------------// CLASS CONSTANTS//-------------------------------------------------------------	private static const HIDE_STATE:int = 527;	private static const VIEW_STATE:int = 140;	//-------------------------------------------------------------// PRIVATE & PROTECTED VARIABLES//-------------------------------------------------------------	private var _model:RecipeModel;	private var _container:StarbucksRecipeContainer;	private var _grabButton:ShareButton;	//-------------------------------------------------------------// CONSTRUCTOR//-------------------------------------------------------------		public function StarbucksRecipeView() {		init();			}//-------------------------------------------------------------// PRIVATE & PROTECTED METHODS	//-------------------------------------------------------------	private function initVars():void {		_model = new RecipeModel();		_model.addEventListener(ModelEvent.READY, modelReadyHandler);			}		private function initListeners():void {			}		private function initProperties():void {		cta.btnLabel = "view recipes";	}	private function init():void {		initVars();		initListeners();		initProperties();		//createGrabButton();	}		private function createGrabButton():void {		_grabButton = new ShareButton('share this widget', 0);		_grabButton.addEventListener(MouseEvent.CLICK, handleGrabClick);		_grabButton.y = 425;		_grabButton.x = 161;				addChild(_grabButton)	}//-------------------------------------------------------------// EVENT HANDLERS//-------------------------------------------------------------	private function onCTAClick($evt:MouseEvent):void {		switch (cta.btnLabel) {			case 'VIEW RECIPES' :				_container.showRecipes();				TweenLite.to(this, .4, {y:VIEW_STATE, ease:Quart.easeOut, onComplete:_container.addEventListeners});				cta.btnLabel = "hide recipes";				cta.arrowRotation = 0;				//August 14: stripping out EW				//EW.trackInteraction('view-recipes-clicks');			break;						case 'HIDE RECIPES' :				_container.destroy();				TweenLite.to(this, .4, {y:HIDE_STATE, ease:Quart.easeOut});				cta.btnLabel = "view recipes";				cta.arrowRotation = 180;				//stripping out EW				//EW.trackInteraction('hide-recipes-clicks');			break;		}	}		private function modelReadyHandler(evt:ModelEvent):void {		_container = new StarbucksRecipeContainer(_model);		_container.x = 10;		_container.y = 74;		addChild(_container);		cta.addEventListener(MouseEvent.CLICK, onCTAClick, false, 0, true);				_model.removeEventListener(ModelEvent.READY, modelReadyHandler);	}		private function handleGrabClick($evt:MouseEvent):void {		//EW.trackInteraction('share widget');			}	//-------------------------------------------------------------// GETTER / SETTERS//-------------------------------------------------------------	//-------------------------------------------------------------// PUBLIC METHODS//-------------------------------------------------------------		public function kill():void {			}//-------------------------------------------------------------// END OF CLASS	//-------------------------------------------------------------}}