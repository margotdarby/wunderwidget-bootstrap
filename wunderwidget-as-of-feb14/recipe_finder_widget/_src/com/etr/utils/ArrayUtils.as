package com.etr.utils{public class ArrayUtils  {//-------------------------------------------------------------// PUBLIC STATIC METHODS//-------------------------------------------------------------	public static function getRandomIndex(theArray:Array, remove:Boolean = false):*	{		var randomNum:uint = Math.floor(Math.random() * theArray.length);		var index:* = theArray[randomNum];		if(remove) theArray.splice(randomNum, 1);		return index;	}		public static function makeRandom(theArray:Array, copy:Boolean = true):Array	{		var randomArray:Array = new Array();		var inputArray:Array = copy ? theArray.slice() : theArray;				while(inputArray.length)		{			var randomNum:Number = Math.floor(Math.random() * inputArray.length);			randomArray.push(inputArray.splice(randomNum,1)[0]);		}		return randomArray;	}	//-------------------------------------------------------------// END OF CLASS	//-------------------------------------------------------------}}